{
  // Enable GitHub Copilot for this workspace
  "github.copilot.enable": true,

  // Enable Copilot's inline suggestions (the extension also needs to support this)
  "github.copilot.inlineSuggest.enable": true,

  // Ensure VS Code's inline suggestion system is enabled so Copilot can show suggestions inline
  "editor.inlineSuggest.enabled": true
}